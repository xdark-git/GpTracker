{% extends 'gp-tracker/base.html.twig' %}

{% block title %}
   Contact
{% endblock %}

{% block body %}
   
<main>
    {% form_theme contactForm 'gp-tracker/form/contact_form.html.twig' %}
    {{ form_start(contactForm, {'attr': {'id': 'contact-form' , 'class': 'contact-form'} }) }}
        <div class="form-title">
            <h4>Une question ? Un conseil ?</h4>
            <h2>Ecrivez-nous !</h2>
        </div>
        <div class="form-group">
            <div class="input-container">
            {{ form_row(contactForm.firstname, {
                'attr':{
                    'class': 'form-element',
                    'value': app.user ? app.user.firstname :''
                }
            }) }}
            </div>
            <div class="input-container">
                {{ form_row(contactForm.lastname, {
                    'attr':{
                        'class': 'form-element',
                        'value': app.user ? app.user.lastname :''
                    }
                }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-container">
                {{ form_row(contactForm.email, {
                    'attr':{
                        'class': 'form-element',
                        'value': app.user ? app.user.email :''
                    }
                }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-container">
                {{ form_row(contactForm.object, {
                    'attr':{
                        'class': 'form-element',
                    }
                }) }}
            </div>
        </div>
        <div class="form-group full">
            <div class="input-container">
                {{ form_row(contactForm.message, {
                    'attr':{
                        'class': 'form-element',
                        'rows': '4',
                        'cols': '50'
                    }
                }) }}
            </div>
        </div>
        <div class="submit-group">
            {{ form_row(contactForm._token) }}
            <input type="submit" value="Envoyer" />
        </div>
        
    {{ form_end(contactForm, {'render_rest': false}) }}
</main>

    
{% endblock %}

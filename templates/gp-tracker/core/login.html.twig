{% extends 'gp-tracker/base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block body %}
    <div class="gp-login-container">
        <div class="header">
            <img src="{{asset('theme/assets/img/logo/gp-tracker-logo-1.png')}}" alt="Logo Gp-tracker" class="logo">
            {# <h1>Quel est votre adresse Email ?</h1>
            <p>Entrez votre email pour vous connecter ou créer un compte GP-Tracker</p> #}
        </div>
        <div class="body">
            <form action="{{ path('app_login') }}" method="post">
                {% if error %}
                <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div>
                    <input type="email" name="email" value="{{ last_username }}" id="input-email" placeholder="Email" autocomplete="email" required autofocus>
                </div>
                <div>
                    <input id="password" type="password" name="password" placeholder="Enter your password" autocomplete="current-password" required>
                </div>
                <div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                </div>
                <button type="submit">Se connecter</button>
                <p class="phone-option">Enregistez vous avec votre numéro de téléphone</p> 
            </form>
            {# {% form_theme loginForm 'gp-tracker/form/loginForm.html.twig' %}
            
            {{ form_start(loginForm)}}
                {{ form_row(loginForm.email, {
                    id: 'input-email',
                    value: last_username,
                    attr: { placeholder: 'Enter your Email' }
                }) }}
                {{ form_row(loginForm.password, {
                    id: 'input-password',
                    attr: { placeholder: 'Enter your Password'}
                }) }}
                {{ form_row(loginForm._token) }}
                <button type="submit">Continuer</button>
            {{ form_end(loginForm) }} #}
            <div class="btn-options">
                <button class="btn-google">
                    <i class="fa-brands fa-google"></i>
                    <span>Continuer avec Gmail</span>
                </button>
                <button class="btn-facebook">
                    <i class="fa-brands fa-facebook" style="color: #ffffff;"></i>
                    <span>Continuer avec Facebook</span>
                </button>
            </div>
        </div>

    </div>
{% endblock %}
{% extends 'gp-tracker/base.html.twig' %}

{% block title %}
   Home
{% endblock %}

{% block body %}

<main>
    <div class="container gp-informations">
        <section class="nav-content">
            <div class="nav">
                <ul class="main-nav">
                    <li class="active">
                       <a href="#">
                             <i class="fa-solid fa-user"></i>
                            <span>Votre compte GP-Tracker</span>
                       </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa-solid fa-envelope"></i>
                            <span>Boîte de reception</span>
                        </a>
                    </li>
                    <li>
                       <a href="#">
                             <i class="fa-solid fa-box"></i>
                            <span>Mes colis</span>
                       </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa-solid fa-truck-fast"></i>
                            <span>Mes commandes</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa-regular fa-clock-rotate-left"></i>
                            <span>Vus Récemment</span>
                        </a>
                    </li>
                </ul>
                <ul class="params">
                    <li>
                        <a href="#">Adresses</a>
                    </li>
                    <li>
                        <a href="#">Paramatère du compte</a>
                    </li>
                </ul>
                <form>
                    <button>Deconnexion</button>
                </form>
            </div>
            <div class="content">
               <div class="header">
                     <h2 class="title">Votre compte</h2>
               </div>
                <form action="#" class="form-info" id="user-informations">
                    <div class="profile">
                        <div class="profile-header">
                            <h2 class="title">Profil</h2>
                            <a href="#" class="my-favorites">Mes favoris</a>
                        </div>
                        <div class="body">
                           <div>
                                 <span class="profile-picture">
                                    <img src="{{asset('theme/assets/img/profil/default-user-profile.png')}}" alt="Profile Image" class="profile-image" id="profile-image-container">
                                    <label for="profile-picture">
                                        <i class="fa-solid fa-plus"></i>
                                    </label>
                                    <input type="file" name="profile" id="profile-picture" class="profile-picture">
                                </span>
                                <span class="description">
                                    Avec une photo, vous avez de quoi personnaliser votre profil et rassurer les autres membres!
                                </span>
                           </div>
                            <div class="input-container">
                                <div>
                                    <label for="username">Nom d'utilisateur</label>
                                    <span class="required-field">Champ requis</span>
                                </div>
                                <input type="text" class="username" id="username" required>
                            </div>
                        </div>
                    </div>
                    <div class="information">
                        <div class="information-header">
                            <h2 class="title">Informations de Compte</h2>
                        </div>
                        <div class="body">
                            <div class="input-container">
                                <div>
                                    <span>
                                        <input type="radio" id="male" name="gender" value="Male">
                                        <label for="male">Monsieur</label>
                                    </span>
                                    <span>
                                        <input type="radio" id="female" name="gender" value="Female">
                                        <label for="female">Madame</label>
                                    </span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="btn-section">
                        <button>Enregistrer</button>
                    </div>
                </form>   
            </div>
        </section>
    </div>
</main>
    
{% endblock %}
{% extends 'gp-tracker/base.html.twig' %}

{% block title %}
    New Password
{% endblock %}

{% block body %}
    <div class="gp-new-pass-container">
        <div class="header">
            <img src="{{asset('theme/assets/img/logo/gp-tracker-logo-1.png')}}" alt="Logo Gp-tracker" class="logo">
            <p>Veuillez saisir votre nouveau mot de passe.</p>
        </div>
        <div class="body">
           {% form_theme resetForm 'gp-tracker/form/loginForm.html.twig' %}
            {{ form_start(resetForm)}}
                <div>
                    {{ form_row(resetForm.plainPassword.first, {
                        attr: { 
                            placeholder: "Entrer un nouveau mot de passe", 
                            autofocus:''
                        }
                    }) }}
                    {{ form_row(resetForm.plainPassword.second, {
                        attr: { 
                            placeholder: "Confirmer votre mot de passe", 
                            autofocus:''
                        }
                    }) }}
                </div>
                <button type="submit">Confirmez votre mot de passe</button>
            {{ form_end(resetForm) }}
        </div>

    </div>
{% endblock %}